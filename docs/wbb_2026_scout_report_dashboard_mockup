              <div>‚Ä¢ <span className="font-semibold">Upper-right:</span> Stars (high usage + efficient)</div>
              <div>‚Ä¢ <span className="font-semibold">Upper-left:</span> Efficient role players</div>
              <div>‚Ä¢ <span className="font-semibold">Lower-right:</span> Volume scorers struggling</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );

  return (
    <div className="min-h-screen bg-gray-100 p-6">
      <div className="max-w-7xl mx-auto">
        {/* Dashboard Header */}
        <div className="bg-white rounded-xl shadow-lg p-6 mb-6">
          <div className="flex items-center justify-between mb-4">
            <div>
              <h1 className="text-3xl font-bold text-gray-900">WBB 2026 Scout Reports</h1>
              <p className="text-gray-600 mt-1">Condensed Weekly Game Analysis Dashboard - Mockup</p>
            </div>
            <div className="flex items-center gap-4">
              <div className="text-right">
                <div className="text-sm text-gray-600">Dashboard Type</div>
                <div className="text-lg font-bold text-indigo-600">Tableau Visual Reference</div>
              </div>
            </div>
          </div>

          {/* Filters Section */}
          <div className="grid grid-cols-3 gap-4 mt-6 p-4 bg-gray-50 rounded-lg">
            <div>
              <label className="text-sm font-semibold text-gray-700 mb-2 block">Game Selector</label>
              <select 
                className="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-indigo-500"
                value={selectedGame}
                onChange={(e) => setSelectedGame(e.target.value)}
              >
                <option value="game1">Jan 20: South Carolina vs Connecticut (72-68)</option>
              </select>
            </div>
            <div>
              <label className="text-sm font-semibold text-gray-700 mb-2 block">Team Toggle</label>
              <select 
                className="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-indigo-500"
                value={selectedTeam}
                onChange={(e) => setSelectedTeam(e.target.value)}
              >
                <option value="teamA">Team A Perspective</option>
                <option value="teamB">Team B Perspective</option>
              </select>
            </div>
            <div>
              <label className="text-sm font-semibold text-gray-700 mb-2 block">Metric Toggles</label>
              <div className="flex gap-2">
                <button className="px-3 py-2 bg-indigo-600 text-white rounded text-sm font-medium">All</button>
                <button className="px-3 py-2 bg-gray-200 text-gray-700 rounded text-sm font-medium">Elite Only</button>
              </div>
            </div>
          </div>
        </div>

        {/* View Selector */}
        <div className="bg-white rounded-xl shadow-lg mb-6">
          <div className="flex border-b">
            <button
              onClick={() => setSelectedView('game-summary')}
              className={`flex-1 px-6 py-4 font-semibold transition-colors ${
                selectedView === 'game-summary'
                  ? 'bg-indigo-600 text-white'
                  : 'bg-white text-gray-700 hover:bg-gray-50'
              }`}
            >
              View 1: Game Summary
            </button>
            <button
              onClick={() => setSelectedView('metrics-breakdown')}
              className={`flex-1 px-6 py-4 font-semibold transition-colors ${
                selectedView === 'metrics-breakdown'
                  ? 'bg-indigo-600 text-white'
                  : 'bg-white text-gray-700 hover:bg-gray-50'
              }`}
            >
              View 2: Metrics Breakdown
            </button>
            <button
              onClick={() => setSelectedView('player-impact')}
              className={`flex-1 px-6 py-4 font-semibold transition-colors ${
                selectedView === 'player-impact'
                  ? 'bg-indigo-600 text-white'
                  : 'bg-white text-gray-700 hover:bg-gray-50'
              }`}
            >
              View 3: Player Impact
            </button>
          </div>
        </div>

        {/* Main Content Area */}
        <div className="bg-white rounded-xl shadow-lg p-6">
          {selectedView === 'game-summary' && <GameSummaryView />}
          {selectedView === 'metrics-breakdown' && <MetricsBreakdownView />}
          {selectedView === 'player-impact' && <PlayerImpactView />}
        </div>

        {/* Design Notes Footer */}
        <div className="mt-6 bg-gradient-to-r from-indigo-50 to-purple-50 border border-indigo-200 rounded-xl p-6">
          <h3 className="text-lg font-bold text-indigo-900 mb-3">üìã Tableau Implementation Checklist</h3>
          <div className="grid grid-cols-2 gap-4 text-sm">
            <div>
              <div className="font-semibold text-indigo-800 mb-2">‚úì Color Encoding:</div>
              <ul className="space-y-1 text-gray-700">
                <li>‚Ä¢ Percentile diverging scale (red ‚Üí gray ‚Üí green)</li>
                <li>‚Ä¢ Neutral palette for data (no team colors)</li>
                <li>‚Ä¢ Green = positive, Red = negative semantics</li>
              </ul>
            </div>
            <div>
              <div className="font-semibold text-indigo-800 mb-2">‚úì Interactive Features:</div>
              <ul className="space-y-1 text-gray-700">
                <li>‚Ä¢ Game selector dropdown</li>
                <li>‚Ä¢ Team perspective toggle</li>
                <li>‚Ä¢ Metric category filters</li>
                <li>‚Ä¢ Tooltips with metric definitions</li>
              </ul>
            </div>
            <div>
              <div className="font-semibold text-indigo-800 mb-2">‚úì Annotations:</div>
              <ul className="space-y-1 text-gray-700">
                <li>‚Ä¢ "Why They Won" auto-generated callout</li>
                <li>‚Ä¢ D1 average reference lines</li>
                <li>‚Ä¢ Percentile rank badges</li>
                <li>‚Ä¢ Categorical tier labels</li>
              </ul>
            </div>
            <div>
              <div className="font-semibold text-indigo-800 mb-2">‚úì Visual Hierarchy:</div>
              <ul className="space-y-1 text-gray-700">
                <li>‚Ä¢ Title: 24pt bold</li>
                <li>‚Ä¢ Section headers: 18pt semibold</li>
                <li>‚Ä¢ Data labels: 12pt</li>
                <li>‚Ä¢ Annotations: 10pt</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default DashboardMockup;
